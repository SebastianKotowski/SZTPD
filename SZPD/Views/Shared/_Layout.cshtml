@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">sdfa</span>
                    <span class="icon-bar">sdf</span>
                    <span class="icon-bar">sdfff</span>
                </button>
                <a href="@Url.Action("Main", "AcademicYear", new { @class = "navbar-brand" })">
                    <img src='@Url.Content("~/Content/img/mainLogoPP.png")' style="margin-top:10px; margin-bottom: 10px;"/>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if ((User.Identity.GetUserName()) == "sz.tpd@cs.put.poznan.pl")
                    {
                        <li>@Html.ActionLink("Zarządzaj", "Index", "AcademicYear")</li>
                        <li>@Html.ActionLink("Struktura", "Index", "Faculties")</li>
                        <li>@Html.ActionLink("Użytkownicy", "Index", "Lecturers")</li>
                    }                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Politechnika Poznańska | Wykonanie: Sebastian Kotowski</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
