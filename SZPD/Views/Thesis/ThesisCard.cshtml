@model SZPD.Models.Thesis

@{
    ViewBag.Title = "Karta pracy";
}

<div id="Logo">
    <img src="~/Content/img/logoPP.png" style="width:150px" />
</div>
<a href="@Url.Action("ThesisCardToPDF", "Thesis", new { id = Model.ID })" class="btn btn-primary" style="float:right; margin-top:40px">Pobierz jako PDF</a>
<div class="header">
    <p>
        Temat<br />
        pracy dyplomowej
        @if (Model.Category == "Inżynierskie stacjonarne" || Model.Category == "Inżynierskie niestacjonarne")
            {
            <text>inżynierskiej</text>
        }
        else
        {
            <text>magisterskiej</text>
        }
        <br />
    </p>
</div>

<br />
<br />

<div id="text">
    <table class="table table-striped table-bordered table-hover" id="definitionsDataTable">
        <thead>
            <tr>
                <th style="background-color:black">

                </th>
                <th style="background-color:#CDCDCD">

                </th>
                <th style="background-color:black; width:170px;">

                </th>
                <th style="background-color:#CDCDCD">

                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="text-align:right">
                    Uczelnia: <br />
                </td>
                <td>
                    Politechnika Poznańska<br />
                </td>
                <td style="text-align:right">
                    Profil Kształcenia: <br />
                </td>
                <td>
                    @Model.EducationProfile <br />
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Wydział:
                </td>
                <td>
                    @ViewBag.Faculty
                </td>
                <td style="text-align:right">
                    Forma studiów:
                </td>
                <td>
                    @Model.Category
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Kierunek:
                </td>
                <td>
                    @ViewBag.Course
                </td>
                <td style="text-align:right">
                    Poziom studiów

                </td>
                <td>
                    @if (Model.Category == "Inżynierskie stacjonarne" || Model.Category == "Inżynierskie niestacjonarne")
                    {
                        <text>I stopnia</text>
                    }
                    else
                    {
                        <text>II stopnia</text>
                    }
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Specjalność:
                </td>
                <td>
                    @ViewBag.Specialization
                </td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>

    <br />
    <br />
    <br />
    <br />

    <p class="commitment">
        Zobowiązuję/zobowiązujemy się samodzielnie wykonać pracę w zakresie wyspecyfikowanym niżej. Wszystkie elementy (m.in. rysunki, tabele, cytaty, programy komputerowe, urządzenia itp.), które zostaną wykorzystane w pracy, a nie będą mojego/naszego autorstwa będą w odpowiedni sposób zaznaczone i będzie podane źródło ich pochodzenia.
    </p>

    <br />
    <br />

    <table class="table table-striped table-bordered table-hover" id="definitionsDataTable">
        <thead>
            <tr class="headerFont" style="height:10px; min-height:5px">
                <th style="background-color:black;">

                </th>
                <th style="background-color:#CDCDCD; color:black;">
                    Imię i nazwisko
                </th>
                <th style="background-color:#CDCDCD; color:black;">
                    Nr albumu
                </th>
                <th style="background-color:#CDCDCD; color:black;">
                    Data i podpis
                </th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Students != null)
            {
                foreach (var s in ViewBag.Students)
                {
                    <tr style="height:10px;">
                        <td style="text-align:right">
                            Student:
                        </td>
                        <td>
                            @s.Key
                        </td>
                        <td>
                            @s.Value
                        </td>
                        <td></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        brak przypisanych stydentów
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />
    <br />

    <table class="table table-striped table-bordered table-hover" id="definitionsDataTable">
        <thead>
            <tr>
                <th style="background-color:black">

                </th>
                <th style="background-color:#CDCDCD">

                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="tdWidth" style="text-align:right">
                    Tytuł pracy:
                </td>
                <td>
                    @Model.Subject<br />
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Wersja angielska tytułu:
                </td>
                <td>
                    @Model.EnglishSubject
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Dane wejściowe:
                </td>
                <td>
                    @Model.InputData
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Zakres pracy:
                </td>
                <td>
                    @Model.ThesisRange
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Termin oddania prac:<br />
                </td>
                <td>
                    @ViewBag.Termin
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Promotor:<br />
                </td>
                <td>
                    @ViewBag.Lecturer
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    Jednostka organizacyjna:<br />
                </td>
                <td>
                    Instytut informatyki
                </td>
            </tr>
        </tbody>
    </table>
</div>


<br />
<br />
<br />
<br />

<div>

    <p class="right">
        ___________________________________________________________________________<br />
        Dyrektor Instytutu     <text style="margin-left:160px">Dziekan</text> <br />
        <br />
        <br />
    </p>
    <br /><br />
    <br /><br />
    <br />
</div>

<div>
    <p class="right">
        __________________________________<br />
        Miejscowość, data<br />
    </p>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
